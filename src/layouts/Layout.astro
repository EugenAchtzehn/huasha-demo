---
import '../styles/bootstrap.scss';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ToTopButton from '../components/ToTopButton.astro';
interface Props {
  title: string;
}
const { url } = Astro;
const { title } = Astro.props;
---

<!doctype html>
<html lang="zh-Hant-TW">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="華夏資源開發提供各產業廢水處理與資源化回收利用之評估、設計、施工、設備，在客製化的解決方案中，我們根據客戶的主觀需求與客觀環境，把廢水的價值最大化，注重每個工序細節，實現減廢零排目標。"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/images/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - 華夏資源開發股份有限公司</title>

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content={url} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title + ' - 華夏資源開發股份有限公司'} />
    <meta
      property="og:description"
      content="華夏資源開發提供各產業廢水處理與資源化回收利用之評估、設計、施工、設備，在客製化的解決方案中，我們根據客戶的主觀需求與客觀環境，把廢水的價值最大化，注重每個工序細節，實現減廢零排目標。"
    />
    <meta property="og:image" content={url.origin + '/images/hsrd-logo-social.jpg'} />
  </head>

  <body>
    <Header />
    <main class="main">
      <div class="container">
        <slot />
      </div>
    </main>
    <Footer />

    <!-- <ToTopButton style="background-color: pink;" /> -->
    <ToTopButton />
  </body>
</html>
<style lang="scss" is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  body {
    color: #3e3a39;
    background-color: #ffffff;
    background-image: url('/images/background-pattern.png');
    /* background-position: center; */
    background-size: auto;
    background-repeat: repeat;
    position: relative;
    z-index: -1;
  }
  h1 {
    color: #4682ab;
    text-align: center;
    font-size: 1.8rem;
    letter-spacing: 0.25rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 2rem;
  }
  h2 {
    color: #4682ab;
    text-align: center;
    font-size: 1.5rem;
    letter-spacing: 0.25rem;
    line-height: 2rem;
    font-weight: 700;
  }
  h3 {
    color: #4682ab;
    text-align: center;
    font-size: 1.3rem;
    letter-spacing: 0.25rem;
    font-weight: 700;
  }

  .content-box {
    background-color: #ffffff;
    height: 100%;
    box-shadow: 0 0.125rem 0.5rem 0 rgba(99, 99, 99, 0.2);
  }
  .content-box:hover {
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
  }

  .main {
    min-height: 80vh;
  }

  // lg breakpoint
  @media (max-width: 991.9px) {
    h1 {
      margin-bottom: 1rem;
    }
  }
</style>
