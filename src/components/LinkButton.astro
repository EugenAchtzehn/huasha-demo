---
interface Props {
  link: string;
  buttonText: string;
}

const { link, buttonText } = Astro.props;
---

<a class="link-button" href={link}>{buttonText}</a>
<style>
  .link-button {
    align-items: center;
    background-color: #73bec1;
    border: 2px solid #2d2d2d;
    border-radius: 0.5rem;
    box-sizing: border-box;
    color: #2d2d2d;
    display: inline-flex;
    font-size: 1rem;
    font-weight: 700;
    height: 3rem;
    justify-content: center;
    line-height: 1.5rem;
    max-width: 100%;
    padding: 0 1.5rem;
    margin: 0.25rem 0.25rem;
    position: relative;
    text-align: center;
    text-decoration: none;
    user-select: none;
    -webkit-user-select: none;
    touch-action: manipulation;
  }

  .link-button::after {
    background-color: #2d2d2d;
    border-radius: 0.5rem;
    content: '';
    display: block;
    height: 3rem;
    left: 0;
    width: 100%;
    position: absolute;
    top: -2px;
    transform: translate(0.25rem, 0.25rem);
    transition: transform 0.2s ease-out;
    z-index: -1;
  }

  .link-button:hover::after {
    transform: translate(0, 0);
  }

  .link-button:active {
    background-color: #73bec1;
    outline: 0;
  }

  .link-button:hover {
    outline: 0;
  }

  @media (max-width: 575.9px) {
    .link-button {
      display: flex;
      margin: 0.5rem 0.25rem;
    }
  }

  @media (min-width: 768px) {
    .link-button {
      padding: 0 2.5rem;
    }
  }
</style>
